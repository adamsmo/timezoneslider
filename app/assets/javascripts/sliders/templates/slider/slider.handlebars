<div class="topBar">
  <div class="name" {{bindAttr data-id="view.content.id"}}>
    {{#view Ember.Button target="view" action="remove"}}{{/view}}{{view.content.name}}
  </div>
  {{view Sliders.CurrentTimeNotifierView locationBinding="view.content.location" localClockBinding="view.content.localClock" remoteClockBinding="view.content.remoteClock"}}
  <div class="handle"></div>
</div>
<div class="bottomBar">
  {{#view Ember.Button target="Sliders.TimeController" action="prevDay" class="prevDay"}}{{/view}}
  {{view Sliders.CurrentTimeSliderView clockBinding="view.content.localClock"}}
  {{view Sliders.RemoteTimeSliderView clockBinding="view.content.remoteClock"}}
  {{view Sliders.RulerView timezoneBinding="view.content.timezone"}}
  {{#view Ember.Button target="Sliders.TimeController" action="nextDay" class="nextDay"}}{{/view}}
</div>