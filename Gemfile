source 'http://rubygems.org'

gem 'rails', '3.2.3'
gem 'sqlite3'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end


gem 'therubyracer'
gem 'execjs'

gem 'jquery-rails'
gem "ember-rails"

gem 'inherited_resources'

gem 'passenger'

# Deploy with Capistrano
gem 'capistrano'

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end
